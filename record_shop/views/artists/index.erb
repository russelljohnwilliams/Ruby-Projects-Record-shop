<table id="t01" align="center">

<tr>
  <th>Artist</th>
  <th>Genre</th>
  <th>Edit</th>

  <% @artists.each do |artist| %> 
  
    </tr>
    <tr>
     <td> <a href="/artists/<%= artist.id %>"><%= artist.name %></a></td>
    <td><%= artist.genre() %> </a></td>
    <td><a href="/artists/<%= artist.id %>/edit">Edit</a></td>
  <% end %>
  </tr>
  </table>
 </div>

<div>
<% else %>
 <div align="center"><h2>Sorry there are no matching artists </h2></div>
<% end %>
</div>



