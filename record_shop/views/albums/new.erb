<div class="content" align="center" >

  <h2>Create a New Album</h2>

  <form action="/albums" method="post">

    <select class="input" name="artist_id">
      <% @artists.each do |artist| %>
      <option value="<%= artist.id %>"><%= artist.name %></option>
      <%  end %>
    </select><br>

    <input class="input" type="text" name="title" placeholder="Title :"><br>

    <input class="input" type="text" name="format" placeholder=" Format :"><br>

    <input class="input" type="text" name="cat_number" placeholder="Catalogue Number :"><br>

    <input class="input" type="text" name="distributor" placeholder="Distributor :"><br>
    
    <button type='submit' class="button" style="vertical-align:middle"><span>Add Album</span></button>
    
  </form>
</div>


