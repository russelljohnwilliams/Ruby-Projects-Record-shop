<div class="content" align="center">

  <h2>Create a New Album</h2>

  <form action="/albums" method="post">

    <label for="title">Title:</label><br>
    <input type="text" name="title">
    <br>

    <label for="format">Format:</label><br>
    <input type="text" name="format">
    <br>

    <label for="cat_number">Catalogue Number:</label><br>
    <input type="text" name="cat_number">
    <br>

    <label for="distributor">Distributor:</label><br>
    <input type="text" name="distributor">
    <br>

    <label for="artist_id">Artist id:</label><br>
    <input type="number" name="artist_id">
    <br>

    <input type='submit' value="Add Album">
  </form>
</div>
