<div class="content">

  <h2>Edit Album</h2>

  <form action="/albumns/<%= @album.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= @album.title %>"><br>
    <label for="format">Format:</label>
    <input type="text" name="format" value="<%= @album.format %>"><br>

    <input type='submit' value="Update Album">
  </form>

</div>


